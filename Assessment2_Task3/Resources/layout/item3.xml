
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/Back3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
    />

    <TextView
        android:id="@+id/ItemName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item3"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_below="@+id/ItemTop3"
        android:layout_marginTop="40dp"
    />

    <TextView
        android:id="@+id/ItemPrice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemName3"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ItemSeller3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemPrice3"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ItemAddress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemSeller3"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ItemPhone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="25dp"
        android:layout_below="@+id/ItemAddress3"
        android:layout_marginTop="10dp"
    />

    <Button
        android:id="@+id/ItemLocation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItemPhone3"
        android:text="Show me the location"
        android:textSize="25dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="50dp"
    />

</RelativeLayout>